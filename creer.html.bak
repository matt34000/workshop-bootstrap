<form class="form-group" method="POST" action="creer.html">



    <main class="container-xl">
        <div class="row">
            <div class="col-12">
                <h3>Nouveau collaborateur</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-4" align="right">
                <label for="nom"><font size="2"><b>Nom :</b></font> </label>
            </div>
            <div class="col-6 form-group">
                <input name="nom" type="text" required id="nom" size="50" class="form-control">
            </div>
        </div>    

<br>       
        <div class="row">
            <div class="col-4" align="right">
                <label for="prenom"><font size="2"><b>Prenom :</b></font> </label>
            </div>
            <div class="col-6 form-group">
                <input type="text" id="prenom" name="prenom" required size="50" class="form-control">
            </div>
        </div> 

<br>
       
        <div class="row">
            <div class="col-4" align="right">
                <label for="datenaiss"><font size="2"><b>Date de naissance :</b></font> </label>
            </div>
            <div class="col-6 form-group">
                <input type="text" id="datenaiss" name="datenaiss" required size="20" class="form-control">
            </div>
        </div>

<br>
        
        <div class="row">
            <div class="col-4" align="right">
                <label for="adresse"><font size="2"><b>Adresse :</b></font> </label>
            </div>
            <div class="col-6 form-group">
                <input type="text" id="adresse" name="adresse" required size="50" class="form-control">
            </div>
        </div>

<br>
        
        <div class="row">
            <div class="col-4" align="right">
                <label for="secu"><font size="2"><b>Numéro de sécurité sociale :</b></font> </label>
            </div>
            <div class="col-6" form-group>
                <input type="text" id="secu" name="secu" required size="20" class="form-control">
            </div>
        </div>
<br><br>
        <div class="row">
            <div class="col-5" align="right">
                <button type="button" class="btn btn-primary">Creer</button>
            </div>
        </div>


</form>

<br><br>
        <div class="row">
            <div class="col-5" align="right">
                <a href="creer_errors.html">page creer_errors.html</a>
            </div>
        </div>                        



				<div class="modal fade" id="validation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ajout d'un collaborateur</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Nom : </p>
                        <p>Prénom : </p>
                        <p>Date de Naissance : </p>
                        <p>Adresse : </p>
                        <p>Numéro de sécurité sociale : </p>
                    </div>
                    <div class="modal-footer">
                    	<button type="submit" class="btn btn-primary">Creer</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                        
                    </div>
                </div>
            </div>
        </div>
    

        
       
